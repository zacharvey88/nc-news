{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },

  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },

  "GET /api/articles": {
    "description": "serves an array of all articles, sorted by created_at in descending order",
    "queries": [],
    "exampleResponse": {
      "articles": [
        {
          "article_id": 4,
          "title": "Student SUES Mitch!",
          "topic": "mitch",
          "author": "rogersop",
          "created_at": "2020-05-06 02:05:00",
          "votes": 0,
          "comment_count": 0,
          "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
        }
      ]
    }
  },

  "GET /api/articles/:article_id": {
    "description": "serves an object containing the matching article accoring to article_id",
    "queries": [],
    "exampleResponse": {
      "article": [
        {
          "article_id": 3,
          "title": "Eight pug gifs that remind me of mitch",
          "topic": "mitch",
          "author": "icellusedkars",
          "body": "some gifs",
          "created_at": "2020-11-03 09:11:00",
          "article_img_url":
            "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
        }
      ]
    }
  },

  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of all comments related to the specified article_id sorted by created_at in descending order",
    "queries": [],
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 11,
          "author": "icellusedkars",
          "votes": 0,
          "article_id": 3,
          "created_at": "2020-09-20 12:09:00",
          "body": "Ambidextrous marsupial"
        },
        {
          "comment_id": 10,
          "author": "icellusedkars",
          "votes": 0,
          "article_id": 3,
          "created_at": "2020-06-20 08:06:00",
          "body": "git push origin master"
        }
      ]
    }
  },

  "POST /api/articles/:article_id/comments": {
    "description": "Creates a new comment by the username provided, attatched to the article_id provided",
    "request body required": {
      "username": "string",
      "body": "string"
    },
    "queries": [],
    "exampleResponse": {
      "comment": {
        "comment_id": 19,
        "article_id": 3,
        "author": "theRealDumbledore",
        "body": "It does not do to dwell on dreams, and forget to live",
        "created_at": "2024-04-16 13:00:00",
        "votes": 0
      }
    }
  },

  "PATCH /api/articles/:article_id": {
    "description": "Updates the number of votes on an existing article",
    "request body required": {
      "inc_votes": 1
    },
    "queries": [],
    "exampleResponse": {
      "article": {
        "article_id": 5,
        "title": "UNCOVERED: catspiracy to bring down democracy",
        "topic": "cats",
        "author": "rogersop",
        "votes": 9,
        "body": "Bastet walks amongst us, and the cats are taking arms!",
        "created_at": "2020-08-03 02:08:00",
        "article_img_url":
          "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
      }
    }
  },

  "DELETE /api/comments/:comment_id": {
    "description": "Deletes the specified comment",
    "queries": [],
    "exampleResponse": "Status 204"
  },


  "GET /api/users": {
    "description": "serves an array of all users",
    "queries": [],
    "exampleResponse": {
      "users": [
        {
          "username": "marauder5",
          "name": "Harry",
          "avatar_url": "https://www.golenbock.com/wp-content/uploads/2015/01/placeholder-user.png"
        }
      ]
    }
  }

}

